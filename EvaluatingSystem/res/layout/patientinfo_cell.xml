<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView 
        android:id="@+id/patientinfo_cell_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    	android:layout_marginRight="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/head"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@id/patientinfo_cell_img">
        <TextView 
	        android:id="@+id/patientinfo_cell_id"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textSize="20sp"
	        android:gravity="center"/>
	    <TextView 
	        android:id="@+id/patientinfo_cell_name"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textSize="20sp"
	        android:gravity="center"/>
	    <TextView 
	        android:id="@+id/patientinfo_cell_gender"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textSize="20sp"
	        android:gravity="center"/>
	    <TextView 
	        android:id="@+id/patientinfo_cell_diagnose"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textSize="20sp"
	        android:gravity="center"/>
    </LinearLayout>
</RelativeLayout>
