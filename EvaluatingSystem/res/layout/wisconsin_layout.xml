<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical">
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:padding="5dp"
	        android:orientation="horizontal"
	        android:gravity="center_horizontal"
	        android:layout_weight="1">
	        <ImageView 
	            android:id="@+id/response_iv"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_gravity="center_horizontal"
	            android:scaleType="fitCenter"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:padding="5dp"
	        android:orientation="horizontal"
	        android:layout_weight="1"
	        android:baselineAligned="false">
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:gravity="center_horizontal">
	            <ImageView 
	                android:id="@+id/presented1_iv"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:scaleType="fitCenter"
		            android:src="@drawable/redtriangle1"
		            android:onClick="onPresented1"/>
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:gravity="center_horizontal">
	            <ImageView 
	                android:id="@+id/presented2_iv"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:scaleType="fitCenter"
		            android:src="@drawable/greenstar2"
		            android:onClick="onPresented2"/>
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:gravity="center_horizontal">
	            <ImageView 
	                android:id="@+id/presented3_iv"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:scaleType="fitCenter"
		            android:src="@drawable/yellowcross3"
		            android:onClick="onPresented3"/>
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:gravity="center_horizontal">
	            <ImageView 
	                android:id="@+id/presented4_iv"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:scaleType="fitCenter"
		            android:src="@drawable/bluecircle4"
		            android:onClick="onPresented4"/>
	        </LinearLayout>
	    </LinearLayout>
	</LinearLayout>
	<SlidingDrawer
        android:id="@+id/tip_sd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:handle="@+id/tip_handle_ll"
        android:content="@+id/tip_content_ll"
        android:orientation="horizontal">
	    <LinearLayout 
	        android:id="@id/tip_handle_ll"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:background="#c8c8c8"
	        android:orientation="horizontal"
	        android:gravity="center">
	        <ImageView 
	            android:id="@+id/tip_handle_bt"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@android:drawable/btn_star"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:id="@id/tip_content_ll"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="#c8c8c8"
	        android:orientation="vertical"
	        android:gravity="center"
	        android:clickable="false">
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal"
	            android:text="@string/wis_head"/>
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal"
	            android:text="@string/wis_1"/>
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal"
	            android:text="@string/wis_2"/>
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal"
	            android:text="@string/wis_3"/>
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal"
	            android:text="@string/wis_4"/>
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal"
	            android:text="@string/wis_5"/>
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal"
	            android:text="@string/wis_6"/>
	    </LinearLayout>
        
    </SlidingDrawer>
</RelativeLayout>