<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#4398ca">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:orientation="horizontal"
	        android:gravity="center">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:textColor="@color/white_text"
	            android:text="@string/patient_num"
	            android:textSize="25sp"/>
	        <TextView 
	            android:id="@+id/patien_num"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:textColor="@color/white_text"
	            android:textSize="25sp"/>
	    </LinearLayout>
        <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="5"
	        android:gravity="right"
	        android:orientation="horizontal">
	        <ImageButton 
	            android:id="@+id/patien_add"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="right"
	            android:background="@drawable/add_btn_press"
	            android:onClick="addPatient"/>
	    </LinearLayout>
    </LinearLayout>
    <ListView 
        android:id="@+id/patient_manage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:childDivider="@color/divider"
    	android:background="@drawable/cutter_patient">
    </ListView>
</LinearLayout>