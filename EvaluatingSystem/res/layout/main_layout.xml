<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#ffffff"
    tools:context=".MainActivity" >
    <Button 
        android:id="@+id/patient_info_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/patient_info_in"
        android:textColor="@color/white_text"
        android:background="@drawable/btn_press"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
	    <RelativeLayout
	        android:id="@+id/patient_head"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="6"
		    android:orientation="horizontal"
		    android:background="#c8c8c8"
		    android:paddingTop="3dp"
	        android:paddingBottom="3dp"
	        android:paddingRight="3dp"
	        android:paddingLeft="4dp">
		    <ImageView
		        android:id="@+id/head_img"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		    	android:layout_marginRight="5dp"
		        android:scaleType="fitXY"
		        android:src="@drawable/head"/>
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:layout_toRightOf="@id/head_img">
		        <TextView
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:textSize="20sp"
			        android:gravity="center"
			        android:text="@string/patientinfo_id"
	            	android:textStyle="bold"/>
			    <TextView
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:textSize="20sp"
			        android:gravity="center"
			        android:text="@string/patientinfo_name"
	            	android:textStyle="bold"/>
			    <TextView
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:textSize="20sp"
			        android:gravity="center"
			        android:text="@string/patientinfo_gender"
	            	android:textStyle="bold"/>
			    <TextView
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:textSize="20sp"
			        android:gravity="center"
			        android:text="@string/patientinfo_diagnose"
	            	android:textStyle="bold"/>
		    </LinearLayout>
		</RelativeLayout>
	    <ListView 
	        android:id="@+id/patient_manage"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:groupIndicator="@drawable/head"
	        android:childDivider="@color/divider"
	        android:paddingTop="3dp"
	        android:paddingBottom="3dp"
	        android:paddingRight="3dp"
	        android:paddingLeft="4dp"
	        android:background="@drawable/patientinfo_back">
	    </ListView>
    </LinearLayout>
</LinearLayout>
